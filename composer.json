{
    "name": "gally/oro-plugin",
    "description": "Oro connector for Gally",
    "homepage": "https://meetgally.com",
    "type": "oro-platform-plugin",
    "license": "OSL-3.0",
    "version": "2.0.0",
    "extra": {
        "oro-plugin-class": "Gally\\OroPlugin\\GallyOroPlugin",
        "author": "Gally Team",
        "label": {
            "en-GB": "Gally Plugin"
        }
    },
    "require": {
        "php": "^8.4.0",
        "gally/gally-php-sdk": "^2.1",
        "oro/commerce": "~5.1 || ~6.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "phpstan/phpstan": "*",
        "phpunit/phpunit": "~9"
    },
    "autoload": {
        "psr-4": {
            "Gally\\OroPlugin\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": false,
            "symfony/flex": false,
            "php-http/discovery": false
        }
    }
}
